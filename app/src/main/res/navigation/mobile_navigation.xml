<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.etelcom.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
    </fragment>

    <fragment
        android:id="@+id/nav_after_validation"
        android:name="com.example.etelcom.ui.AfterValidationFragment"
        android:label="@string/menu_after_validation"
        tools:layout="@layout/fragment_after_validation" >
    </fragment>

    <fragment
        android:id="@+id/nav_new_file"
        android:name="com.example.etelcom.ui.new_file.NewFileFragment"
        android:label="@string/menu_new_file"
        tools:layout="@layout/fragment_new_file">
        <action
            android:id="@+id/new_file_to_after_validation"
            app:destination="@id/nav_after_validation"
            app:popUpTo="@id/nav_after_validation"
            app:popUpToInclusive="true" />
</fragment>

</navigation>